<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".SociosyamigosActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/shape_rounded"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/back_icon"
        app:titleTextColor="@color/white">
        <!-- Centered Title TextView -->
        <TextView
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Socios y Amigos"
            android:textColor="@color/white"
            android:textSize="22sp"
            tools:layout_editor_absoluteX="164dp"
            tools:layout_editor_absoluteY="20dp" />
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">

            <ImageView
                android:id="@+id/imageView25"
                android:layout_width="316dp"
                android:layout_height="139dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/socio1" />

            <ImageView
                android:id="@+id/imageView26"
                android:layout_width="314dp"
                android:layout_height="189dp"
                app:srcCompat="@drawable/socio2" />

            <ImageView
                android:id="@+id/imageView27"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/socio3" />

            <ImageView
                android:id="@+id/imageView28"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/socio4" />

            <ImageView
                android:id="@+id/imageView29"
                android:layout_width="match_parent"
                android:layout_height="142dp"
                app:srcCompat="@drawable/socio6" />

            <ImageView
                android:id="@+id/imageView30"
                android:layout_width="336dp"
                android:layout_height="108dp"
                app:srcCompat="@drawable/socio5" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="315dp"
                android:layout_height="211dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/socio7" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/socio8" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="wrap_content"
                android:layout_height="252dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/socio9" />

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="287dp"
                android:layout_height="330dp"
                app:srcCompat="@drawable/socio10" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>